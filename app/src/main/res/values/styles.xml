
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingbar_selector</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:maxHeight">80dp</item>
    </style>

    <!--  for book reading  -->
    <style name="StyledIndicatorsWhite" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="StyledIndicatorsBlack" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>


    <style name="PagerTabStripText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#a4c639</item>
    </style>


    <style name="navBG">
        <item name="android:background">#60000000</item>
    </style>

    <style name="listBG">
        <item name="android:background">#90000000</item>
    </style>

    <style name="navBGButton">
        <item name="android:tint">@color/tint_white</item>
        <item name="android:background">@drawable/wp_button</item>
    </style>

    <style name="wpButton">
        <item name="android:tint">@color/tint_white</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_margin">2dip</item>
        <item name="android:background">@drawable/wp_button</item>
    </style>

    <style name="wpButtonM0">
        <item name="android:padding">5dip</item>
        <item name="android:background">@drawable/wp_button</item>
    </style>


    <style name="buttonWhiteInverted">
        <item name="android:background">@drawable/bg_border_white</item>
        <item name="android:padding">8dip</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
        <item name="android:tint">?android:attr/textColorLink</item>
    </style>


    <style name="buttonWhite">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">8dip</item>
        <item name="android:layout_marginLeft">1.5dip</item>
        <item name="android:layout_marginRight">1.5dip</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="buttonWhiteClose" parent="buttonWhite">
        <item name="android:padding">10dip</item>
    </style>

    <style name="textLink">
        <item name="android:padding">5dip</item>
        <item name="android:minEms">4</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:tag">textLink</item>
        <item name="android:textColor">?android:attr/textColorLink</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="textLinkWhite" parent="textLink">
        <item name="android:tag">textLinkWhite</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="textLinkStyle">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:attr/textColorLink</item>
    </style>

    <style name="buttonClear">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">8dip</item>
        <item name="android:tint">@color/tint_gray</item>
    </style>

    <style name="textSection">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">4dip</item>
        <item name="android:background">#60e1e1e1</item>
    </style>


    <style name="textCircle">
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_circular</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">A</item>
        <item name="android:layout_marginRight">8dip</item>
        <item name="android:layout_marginLeft">4dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="popupwindowAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>


    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabLayout2" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance2</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/default_shadow_color</item>
        <item name="textAllCaps">true</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="MyTabTextAppearance2" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/default_shadow_color</item>
        <item name="textAllCaps">true</item>
    </style>
    <style name="AppTheme.Alert" parent="Base.Theme.AppCompat">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>

        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:buttonBarStyle">@style/Widget.AppCompat.ButtonBar.AlertDialog</item>
        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="DialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/content_normal_size</item>
    </style>

</resources>
