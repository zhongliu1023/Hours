<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/margin_280"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_back_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/getneral_padding_16">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="添加到收藏夹"
            android:gravity="center"
            android:textSize="@dimen/font_size_20"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/getneral_padding_16"
        android:paddingEnd="@dimen/getneral_padding_16"
        android:layout_marginTop="@dimen/getneral_padding_8">
        <EditText
            android:id="@+id/addFavoriteFolderName"
            android:layout_width="120dp"
            android:layout_alignParentLeft="true"
            android:hint="新建收藏夹"
            android:textAlignment="center"
            android:padding="@dimen/getneral_padding_8"
            android:textSize="@dimen/getneral_padding_16"
            android:textColorHint="@color/alpa_40"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtAddFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="创建"
            android:textColor="@color/pink"
            android:textSize="@dimen/font_size_18"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/getneral_padding_8"
        android:layout_marginBottom="@dimen/getneral_padding_8"
        android:background="@color/seperator"/>

    <ListView
        android:id="@+id/favoritesCollection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/getneral_padding_16"
        android:paddingEnd="@dimen/getneral_padding_16"
        android:divider="@null"
        android:dividerHeight="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/default_shadow_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            android:textSize="@dimen/font_size_20"
            android:textColor="@color/colorPrimaryDark"
            android:padding="@dimen/padding_10"
            android:text="@string/cancel" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/default_shadow_color"/>
        <TextView
            android:id="@+id/txtConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="center"
            android:textSize="@dimen/font_size_20"
            android:textColor="@color/colorPrimaryDark"
            android:padding="@dimen/padding_10"
            android:text="@string/determine" />
    </LinearLayout>

</LinearLayout>
