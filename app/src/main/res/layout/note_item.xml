<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/getneral_padding_16"
    android:background="@color/transparent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="位置："/>

        <TextView
            android:id="@+id/subTitleTxt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="16sp"
            android:text="位置："/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/getneral_padding_8">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <ImageView
                    android:id="@+id/imgNoteColorIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/read_orange_icon"/>
                <TextView
                    android:id="@+id/txtPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/imgNoteColorIcon"
                    android:layout_centerVertical="true"
                    android:textSize="16sp"
                    android:text="位置："/>
                <TextView
                    android:id="@+id/txtPageNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/txtPos"
                    android:layout_centerVertical="true"
                    android:text="23/2003"/>
                <ImageView
                    android:id="@+id/imgNoteMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/note_more"
                    android:layout_gravity="end"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/getneral_padding_8"
                android:layout_marginBottom="@dimen/getneral_padding_8"
                android:background="@color/seperator"/>

            <TextView
                android:id="@+id/txtColorNoteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text=""
                android:layout_marginBottom="@dimen/getneral_padding_8"/>

            <LinearLayout
                android:id="@+id/noteLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/imgNoteAddOrUpdate"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:src="@drawable/note_note_icon"/>
                <TextView
                    android:id="@+id/txtNoteAddOrUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="添加笔记"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/pink"/>
            </LinearLayout>


            <TextView
                android:id="@+id/secondSeperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/getneral_padding_8"
                android:layout_marginBottom="@dimen/getneral_padding_8"
                android:background="@color/seperator"/>

            <TextView
                android:id="@+id/txtNoteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="5"
                android:text=""
                android:layout_marginBottom="@dimen/getneral_padding_8"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>