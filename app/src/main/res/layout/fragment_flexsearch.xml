<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/getneral_padding_16"
        android:layout_marginEnd="@dimen/getneral_padding_16"
        android:layout_height="@dimen/home_tab_body_title_height">
        <TextView
            android:id="@+id/searchRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索记录"
            android:textSize="@dimen/sw360_standard_fontsize_20"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/clearSearchHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空搜索记录"
            android:textColor="@color/pink"
            android:textSize="@dimen/sw360_standard_fontsize_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="5dp"/>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/getneral_padding_16"
        android:background="@color/seperator"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/flexbox_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>