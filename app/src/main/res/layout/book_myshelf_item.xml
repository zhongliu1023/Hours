<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/myshelf_book_item_height"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout android:orientation="vertical"
        android:layout_width="@dimen/book_item_width"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/item_book_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/book_image"
            android:padding="1dp"/>
        <ImageView
            android:id="@+id/downStateMark"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/download"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:id="@+id/bookName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="百年孤独"/>
        <TextView
            android:id="@+id/downState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textSize="20sp"
            android:text="已下载"/>
        <TextView
            android:id="@+id/bookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:text="马尔克斯"/>
    </RelativeLayout>
</LinearLayout>

